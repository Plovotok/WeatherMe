<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WeatherMe" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Base.Theme.MyWeather" parent="Theme.MaterialComponents.Light.NoActionBar">


        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>

        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:colorEdgeEffect">@color/toolbar_color</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="snackbarTextViewStyle">@style/snackbar_body_regular</item>

    </style>

    <style name="Base.Theme.WeatherMeFull" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

    <style name="Theme.WeatherMe.Fullscreen" parent="Theme.WeatherMe">
        <item name="android:actionBarStyle">@style/Widget.Theme.WeatherMe.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.WeatherMe.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="BlueCheckbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="colorControlNormal">@color/weather_info_icon</item>
        <item name="colorControlActivated">@color/weather_info_icon</item>
    </style>

    <style name="Theme.WeatherMe" parent="Base.Theme.MyWeather" />

    <style name="Theme.WeatherMe.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.WeatherMe.AppWidgetContainer" parent="Theme.WeatherMe.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">8dp</item>
    </style>
</resources>