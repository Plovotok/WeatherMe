<resources>

    <style name="Widget.Theme.WeatherMe.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.WeatherMe.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.0</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="text_h1">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body_medium">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body_regular">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="snackbar_body_regular">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="body_small">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body_small_regular">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_anim</item>
        <!--        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>-->
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:interpolator">@android:interpolator/bounce</item>
    </style>

    <style name="Widget.Theme.WeatherMe.MyView" parent="">
        <item name="android:background">@color/gray_400</item>
        <item name="progressColor">@color/light_blue_600</item>
    </style>

    <style name="Widget.WeatherMe.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.WeatherMe.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>