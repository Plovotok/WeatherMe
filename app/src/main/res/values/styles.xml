<resources>

    <style name="Widget.Theme.WeatherMe.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.WeatherMe.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>



    <style name="text_h1">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">56sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body_medium">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body_regular">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body_small">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="body_small_regular">
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_anim</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>