<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/transparent"
    app:cardCornerRadius="33dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/cloudy_day" />

        <TextView
            android:id="@+id/weather_desc"
            style="@style/body_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloudy"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/weather_icon"
            app:layout_constraintStart_toStartOf="@+id/weather_icon"
            app:layout_constraintTop_toBottomOf="@+id/weather_icon" />

        <TextView
            android:id="@+id/avg_temp"
            style="@style/text_h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="14째"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/feels_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feels like 10째"
            style="@style/body_small_regular"
            app:layout_constraintBottom_toBottomOf="@+id/avg_temp"
            app:layout_constraintStart_toEndOf="@+id/avg_temp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/date"
            style="@style/body_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="September 15, 23:51"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/avg_temp"
            app:layout_constraintTop_toBottomOf="@+id/avg_temp" />

        <TextView
            android:id="@+id/max_temp"
            style="@style/body_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="max: 20째"
            app:layout_constraintBottom_toBottomOf="@+id/avg_temp"
            app:layout_constraintEnd_toStartOf="@+id/weather_icon"
            app:layout_constraintStart_toEndOf="@+id/feels_like"
            app:layout_constraintTop_toTopOf="@+id/avg_temp" />

        <TextView
            android:id="@+id/min_temp"
            style="@style/body_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="min: 10째"
            app:layout_constraintEnd_toEndOf="@+id/max_temp"
            app:layout_constraintStart_toStartOf="@+id/max_temp"
            app:layout_constraintTop_toBottomOf="@+id/max_temp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>